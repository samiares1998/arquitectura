<html lang="es">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <meta http-equiv="X-UA-Compatible" content="ie=edge">
  <link rel="icon" type="image/png" href="/assets/img/small-logo.png">
  <link rel="stylesheet" href="/assets/css/bootstrap/bootstrap.min.css">
  <link rel="stylesheet" href="/../node_modules/@fortawesome/fontawesome-free/css/all.css">
  <link rel="stylesheet" href="/assets/css/variables.css">
  <link rel="stylesheet" href="/assets/css/config.css">
  <link rel="stylesheet" href="/assets/css/dashboard.css">
  <title>Code UFPS</title>
</head>
<body>
  <main class="container-fluid row dashboard__main">
    <!-- menu -->
    <section class="col-md-4 col-lg-3 menu">
      <!-- logo -->
      <div class="menu__logo">
        <img
          class="menu__logoImg"
          src="/assets//img//logo_color.png"
          alt="logo ufps proyect">
      </div>
      <!-- menu -->
      <nav class="menu__nav">
        <a href="" class="menu__item active">Pricipal</a>
        <a href="" class="menu__item">Salones</a>
       
      </nav>

      <!-- footer menu -->
      <div class="menu__footer">
        <p>Grupo Arquictura 2019-1</p>
      </div>

    </section>

    <!-- content -->
    <section class="col-md-8 col-lg-9 content">
      <!-- header -->
      <header class="header">
        <div class="header__contentName">
          <a href="/salir"><p>Salir </p></a>
          <img src="/assets//img/dashboard/user_circle.png" alt="foto de perfil">
        </div>
      </header>
      <!-- sub header -->
      <section class="subHeader">
        <div class="subHeader__row row">
          <div class="col-md-10 subHeader__item">
            <h3>Espacion personal</h3>
           
             <button type="button" class="subHeader__add" data-toggle="modal" data-target="#exampleModal">
              Documento +
            </button>
            
          </div>
        </div>
      </section>


  <!-- Modal -->
  <div class="modal fade" id="exampleModal" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
    <div class="modal-dialog" role="document">
      <div class="modal-content">
        <div class="modal-header">
          <h5 class="modal-title" id="exampleModalLabel">Documento UFPS</h5>
          <button type="button" class="close" data-dismiss="modal" aria-label="Close">
            <span aria-hidden="true">&times;</span>
          </button>
        </div>
        <div class="modal-body">
          <form action="/crear" method="POST">
          <label for="recipient-name" class="col-form-label">Nombre Del Documento:</label>
          <input type="text" name="name" class="form-control" id="recipient-name"> 
          <br>

          <label for="recipient-name" class="col-form-label">Lenguaje:</label>
          <select class="custom-select mb-2 mr-sm-2 mb-sm-0" name="lenguaje" id="selectlanguage">
                      <option selected>Java</option>

                      <option>Python</option>
                      <option>C</option>
                      <option>C++</option>
                      <option>javascript</option>
                    
          
                  
          </select>
          <br>

          <label for="recipient-name" class="col-form-label">Nombre de la clase:</label>
           <select class="custom-select mb-2 mr-sm-2 mb-sm-0" name="clase" id="clase">
                      <option selected>POO1</option>

                      <option>POO2</option>
                      <option>Fundamentos</option>

                    
          
                  
          </select>
          <br>
          <br>
          
          <input type="submit" class="btn btn-primary">


          </form>
        

        </div>
        <div class="modal-footer">
          <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
        
        </div>
      </div>
    </div>
  </div>








      <!-- content folders -->
      <section class="folders">
        <div class="row">
          <section class="col-lg-10 row folders__row">
            <!-- item -->

          {{#each document}}

            
            <a href="/document/{{this.id_document}}" class="folders__item col-4 col-md-4 col-lg-2">
              <img
                class="folders__folderImg"
                src="/assets//img/dashboard/folder.png"
                alt="folder">
              <p class="folders__folderText">
                Arquitectura de computadores
              </p>
            </a>
            <!-- item -->
           
            <!-- item -->
           
          {{/each}}


              {{#if error }}
                <div class="alert alert-danger" role="alert">
                  <strong>Oh !</strong> No tienes documentos creados o compartidos.
                </div>
             {{/if}}

            
          </section>
        </div>
      </section>
      <!-- footer -->
      <footer class="footer__dashboard">
        <img src="/assets/img/big-logo.png" alt="ufps">
        <img src="/assets/img/big-logo.png" alt="ufps sistemas">
      </footer>
    </section>
  </main>
  
<script src="/assets/js/jquery/jquery-3.4.1.min.js"></script>
<script src="/assets/js/bootstrap/bootstrap.min.js"></script>
</body>
</html>